<view class="section">
  <scroll-view scroll-y="true" style="width:100%;" class="caidian">
    <view wx:for="{{goods}}" class="mendian" data-index='{{index}}'>{{item.name}}
      <view>价格:{{item.money}}元/{{item.company}}</view>
      <view class='num_change'>                
                    <!-- <image 
                        class='minus_icon' 
                        src='../../img/jian.jpg' 
                        data-index='{{index}}' 
                        data-types='minus'  
                        catchtap='numchangeTap'>
                    </image>               -->
                    <text class='shop_num'>{{item.num}}</text>                
                    <image 
                        class='add_icon' 
                        data-index='{{index}}' 
                        data-types='add'  
                        catchtap='numchangeTap' 
                        src='../../img/jia.gif'>
                    </image>            
                </view>
    </view>
  </scroll-view>
</view>